<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<%= f.input :name, input_html: {class: 'input'}, wrapper: false,
  label_html: {class: 'label'} %>
<br>
<%= f.input :comment, input_html: {class:'textarea'}, wrapper: false,
  label_html: {class: 'label'} %>
<%= f.button :submit, 'Enter your comment' %>
<% end %>
