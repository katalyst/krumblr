.small-5.small-centered.columns
  %h2= "Sign up"
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .field
      = f.label :name, "Name"
      %br
      = f.input :name, label: false
      = f.label :email
      %br
      = f.input :email, autofocus: true, autocomplete: "email", label: false
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br
      = f.input :password, autocomplete: "new-password", label: false
    .field
      = f.label :password_confirmation
      %br
      = f.input :password_confirmation, autocomplete: "new-password", label: false
    .actions
      = f.submit "Sign up", class: "button small small-only-expanded"
  = render "users/shared/links"