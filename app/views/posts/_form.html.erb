<%= simple_form_for([@blog, @blog.posts.build]) do |f| %>
<%= f.input :title, input_html:
  {class: 'input'}, wrapper: false,
  label_html: {class: 'label'} %>
<br>
  <div class = "field">
    <div class ="control">
      <%= f.input :body, 
       input_html: {class: 'textarea'}, wrapper: false,
      label_html: {class: 'label'} %>
    </div>
  </div>

  <%= f.button :submit, 'Create new post', class: "button is-primary" %>
  <% end %>
</div>
