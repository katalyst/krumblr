<%= simple_form_for([@blog, @blog.posts.build]) do |f| %>
<%= f.input :title, input_html:
  {class: 'input'}, wrapper: false,
  label_html: {class: 'label'} %>
<br>
<%= f.input :body, input_html:
  {class: 'textarea'}, wrapper: false,
  label_html: {class: 'label'} %>

<%= f.button :submit, 'Create new post' %>
<% end %>
