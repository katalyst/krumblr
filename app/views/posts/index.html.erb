<% @posts.each do |post| %>
<h2><%= post.title %></h2>
<h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
<%= raw(post.body).truncate(358) %>
<%= link_to "Read more...", post_path(post) %>
<%=link_to "Create another post", {:action =>'new', :controller => 'posts'} %>
<%= link_to "Delete post", post_path(post),
method: :delete, data: {confirm:"Delete post?"} %>
<%= link_to "Go to home page", {:controller => 'home'} %>
<
<br>
<% end %>
