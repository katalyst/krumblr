<!-- Added to display posts that match a search term within a blog -->
<div>
  </br><h1>Matched posts</h1></br>
  <% if @matching_posts.empty? %>
    <h2> No posts match your search </h2>
  <% else %>
    <% @matching_posts.each do |post| %>
      <div class="card" style="margin-bottom :10px">
        <h2><%= link_to post.title, post, :class => "post-card" %>
        </h2>
      </div>
    <% end %>
  <% end %>
</div>